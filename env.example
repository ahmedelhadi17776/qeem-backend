# Qeem Backend Environment Variables Template
# Copy this file to .env and update the values with your actual configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
# Development (local): postgresql://username:password@localhost:5432/qeem
# Docker: postgresql://postgres:password@postgres:5432/qeem
# Production: postgresql://username:password@your-production-host:5432/qeem
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/qeem

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for caching and session storage
# Development (local): redis://localhost:6379
# Docker: redis://redis:6379
# Production: redis://your-redis-host:6379
REDIS_URL=redis://localhost:6379

# =============================================================================
# MONGODB CONFIGURATION (for ML data)
# =============================================================================

# MongoDB Atlas connection string for ML data storage
# Get this from MongoDB Atlas dashboard
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URL=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/qeem?retryWrites=true&w=majority

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT Secret Key - Generate a strong secret key for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration (in days)
JWT_EXPIRES_IN_DAYS=7

# JWT Algorithm
JWT_ALGORITHM=HS256

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
# Options: development, staging, production
ENVIRONMENT=development

# Debug Mode (set to false in production)
DEBUG=true

# Application Host and Port
HOST=0.0.0.0
PORT=8000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Sentry DSN for error tracking (optional)
# Get this from your Sentry project settings
SENTRY_DSN=

# OpenAI API Key for AI features (optional)
# Get this from OpenAI dashboard
OPENAI_API_KEY=

# Email Service Configuration (optional)
# SMTP settings for sending emails
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@qeem.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated list of allowed origins)
# Development: http://localhost:3000,http://127.0.0.1:3000
# Production: https://your-domain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Password Hashing
# Number of rounds for bcrypt (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log Format
# Options: json, text
LOG_FORMAT=text

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_ML_PREDICTIONS=false
ENABLE_AI_NEGOTIATION=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Skip authentication in development (set to false in production)
SKIP_AUTH=false

# Enable SQL query logging in development
SQL_ECHO=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Uncomment and configure these for production deployment

# SSL Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Database Connection Pool
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=30

# Redis Connection Pool
# REDIS_POOL_SIZE=10
# REDIS_MAX_CONNECTIONS=20
